<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>ServletDemo06</servlet-name>
        <servlet-class>d5.ServletDemo06</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDemo06</servlet-name>
        <url-pattern>/demo06</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletDemo07</servlet-name>
        <servlet-class>d6.ServletDemo07</servlet-class>
        <!--配置ServletDemo07的初始化参数 -->
        <init-param>
            <param-name>name</param-name>
            <param-value>gacl</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123</param-value>
        </init-param>
        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDemo07</servlet-name>
        <url-pattern>/demo07</url-pattern>
    </servlet-mapping>

    <!-- 配置WEB应用的初始化参数 -->
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/test</param-value>
    </context-param>

    <!-- 针对404错误的处理页面 -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <!-- 针对500错误的处理页面 -->
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>

    让jspf同jsp一样加载
    <servlet-mapping>
        <servlet-name>jsp</servlet-name>
        <url-pattern>*.jsp</url-pattern>
        <!-- 让jspf扩展名同样成为JSP Servlet处理的文件。-->
        <url-pattern>*.jspf</url-pattern>
    </servlet-mapping>

</web-app>